@{
    ViewBag.Title = "Create_retailer";
    Layout = "~/Views/Shared/_layout_main.cshtml";
}

@Html.Partial("~/Views/Partial/_back_bar_menu.cshtml", "/")

<div id="page_content">
    <div id="page_content_inner">
        <div class="uk-grid">
            <div class="" style="margin-bottom:30px;">
                <div class="md-card md-card-hover">
                    <div class="md-card-content" style="padding: 0px 0px; border: 3px solid #fff;">
                        <i class="md-icon material-icons">edit</i>
                        
                    </div>
                </div>
            </div>
            <div class="uk-width-large-3-4 uk-width-medium-1-3 uk-width-small-1-2" style="margin-bottom:30px;" ng-app="managePassenger" ng-controller="editPassenger">
                <div class="md-card md-card-hover" style="border-radius: 6px;">
                    <form name="addForm" ng-submit="submitForm(addForm.$valid)" novalidate>
                        <div class="md-card-content" style="border: 3px solid #fff; border-radius:6px;">
                            <div class="uk-form-row">
                                <h2>Add new passenger into booking: {{LocatorName}}</h2>
                            </div>
                            <div class="uk-form-row">
                                <label for="name">Locator</label>
                                <input ng-model="LocatorName" required ng-minlength="3" ng-maxlength="6" ng-pattern="/^[a-zA-Z0-9- ]*$/" ng-focus="submitted=false" class="md-input" type="text" name="locatorName" />
                                <span style="font-size:12px; color:#aaa; margin-bottom:30px;">* If you change locator's name, the passenger will be added to new booking.</span>
                                <p ng-show="submitted && addForm.locatorName.$error.required" class="uk-text-small parsley-errors-list ng-hide">This field is a required.</p>
                                <p ng-show="submitted && addForm.locatorName.$error.minlength " class="uk-text-small parsley-errors-list ng-hide">The length must 6 characters.</p>
                                <p ng-show="submitted && addForm.locatorName.$error.maxlength " class="uk-text-small parsley-errors-list ng-hide">The length must 6 characters.</p>
                                <p ng-show="submitted && addForm.locatorName.$error.pattern" class="uk-text-small parsley-errors-list ng-hide">Special characters are not allowed.</p>

                            </div>
                            <div class="uk-form-row">
                                <label for="name">Passenger Name</label>
                                <input ng-model="PassengerName" ng-init="PassengerName=' '" required ng-minlength="3" ng-pattern="/^[a-zA-Z0-9- ]*$/" ng-focus="submitted=false" class="md-input" type="text" name="passengerName" />

                                <p ng-show="submitted && addForm.passengerName.$error.required" class="uk-text-small parsley-errors-list ng-hide">This field is a required.</p>
                                <p ng-show="submitted && addForm.passengerName.$error.minlength" class="uk-text-small parsley-errors-list ng-hide">This field is too short.</p>
                                <p ng-show="submitted && addForm.passengerName.$error.pattern" class="uk-text-small parsley-errors-list ng-hide">Special characters are not allowed.</p>
                            </div>
                        </div>
                        <div class="blog_list_footer" style="padding: 10px 0px 5px 0px; border-top: 0px;">
                            <div style="position: relative; min-height: 52px;">
                                <button type="submit" relative ng-click="submitted=true;isUpdate=true;" class="md-btn md-btn-primary md-btn-wave-light waves-effect waves-button waves-light uk-float-right" href="#"><i class="material-icons" style="color:#fff; margin-right: 10px;">add</i>add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
@section scripts
{
    <script src="/js/config.js"></script>
    <script src="/js/passenger.js"></script>
}
