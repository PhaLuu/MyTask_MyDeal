
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_layout_main.cshtml";
}
@Html.Partial("~/Views/Partial/_top_bar_menu.cshtml", "Passengers")
<div id="page_content" ng-app="managePassenger" ng-controller="mainPassenger">
    <div id="page_content_inner">

        <h3 class="heading_b uk-margin-bottom">Booking List ({{locators.length}} bookings)</h3>

        <div class="uk-grid">
            <div class="uk-width-medium-1-2">
                <label for="contact_list_search">Search Locator and Passenger</label>
                <input class="md-input" type="text" ng-model="search" id="contact_list_search" />
            </div>
        </div>
        <div class="uk-grid">
            <div ng-cloak ng-repeat="locator in locators | filter:filterBySearch" class="uk-width-medium-1-4" style="margin-bottom:30px;">
                <div class="md-card md-card-hover  md-card-success" style="border-radius: 4px;">
                    <div class="md-card-toolbar">
                        <div class="md-card-toolbar-actions">
                            <i class="md-icon material-icons md-color-red-500">&#xE80E;</i>
                        </div>
                        <h3 class="md-card-toolbar-heading-text" style="font-size:18px;">
                            Booking : <span ng-bind="locator.Name"></span>
                        </h3>
                    </div>
                    <div class="md-card-content">
                        
                        <ul class="md-list">
                            <li ng-repeat="passenger in locator.Passengers | filter:query as filtered" style="min-height:10px; border-bottom-color:#555; background-color:#dedede;">
                                <div class="md-list-content">
                                    <span ng-bind="passenger.Name"></span>
                                </div>
                            </li>
                            <li>
                                <div class="md-list-content">
                                    <span class="md-list-heading" style="margin-top:20px;">Summary</span>
                                    <span class="uk-text-small uk-text-muted">Has ({{filtered.length}}) passengers</span>

                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="blog_list_footer">
                        <a class="md-btn md-btn-small md-btn-flat md-btn-flat-primary uk-float-right" ng-href="/edit?id={{locator.Name}}">Add passenger</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="/js/config.js"></script> 
    <script src="/js/passenger.js"></script>
}
